<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>cats-web-project</artifactId>
	<packaging>war</packaging>
	<parent>
		<groupId>oa.catsic.com</groupId>
		<artifactId>cats-parent</artifactId>
		<version>1.5</version>
		<relativePath>../cats-parent</relativePath>
	</parent>
	<dependencies>
		<dependency>
			<groupId>oa.catsic.com</groupId>
			<artifactId>cats-base</artifactId>
			<version>${cats-version}</version>
		</dependency>
		<dependency>
			<groupId>oa.catsic.com</groupId>
			<artifactId>cats-security</artifactId>
			<version>${cats-version}</version>
		</dependency>

		<dependency>
			<groupId>oa.catsic.com</groupId>
			<artifactId>cats-core-mod</artifactId>
			<version>${cats-version}</version>
		</dependency>
		<dependency>
			<groupId>oa.catsic.com</groupId>
			<artifactId>cats-cxf</artifactId>
			<version>${cats-version}</version>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.1.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>taglibs</groupId>
			<artifactId>standard</artifactId>
			<version>1.1.2</version>
		</dependency>
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xml-apis</artifactId>
			<version>1.4.01</version>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.42</version>
		</dependency>


		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-cas</artifactId>
			<version>4.0.3.RELEASE</version>
			<exclusions>
				<exclusion>
					<artifactId>bcprov-jdk15</artifactId>
					<groupId>org.bouncycastle</groupId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-core</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-web</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-beans</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-orm</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-context</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-aop</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-tx</artifactId>
				</exclusion>
				<exclusion>
					<artifactId>xml-apis</artifactId>
					<groupId>xml-apis</groupId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<warSourceExcludes>src/test/java/**</warSourceExcludes>
					<warSourceExcludes>src/main/java/com/catsic/base/test/BaseTest</warSourceExcludes>
					<!-- 打包时是否包含空目录; true 是，false 否 -->
					<includeEmptyDirectories>true</includeEmptyDirectories>
					<warName>${war.warName}</warName>
					<outputDirectory>${project.build.directory}</outputDirectory>
					<webappDirectory>${project.build.directory}/${project.build.finalName}</webappDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources-database</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}</outputDirectory>
							<resources>
								<resource>
									<targetPath>${project.build.outputDirectory}/config/database/</targetPath>
									<directory>src/main/deploy/${active.profile}</directory>
									<filtering>true</filtering>
									<excludes>
										<exclude>logback.xml</exclude>
									</excludes>
								</resource>
								<resource>
									<targetPath>${project.build.outputDirectory}</targetPath>
									<directory>src/main/deploy/${active.profile}</directory>
									<filtering>true</filtering>
									<excludes>
										<exclude>*.properties</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- <plugin> <groupId>org.apache.tomcat.maven</groupId> <artifactId>tomcat7-maven-plugin</artifactId> 
				<version>2.2</version> <configuration> <server>Tomcat7</server> <url>http://localhost:8080/manager/text</url> 
				<path>/${war.warName}</path> <warFile>${project.build.directory}/${war.warName}.war</warFile> 
				</configuration> </plugin> -->
		</plugins>
	</build>
</project>