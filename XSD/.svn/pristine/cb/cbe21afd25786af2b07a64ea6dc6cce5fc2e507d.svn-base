nav {
	/* display: inline-block; */
	letter-spacing: -4px;
	background: #252525;
	/* border-radius: 4px; */
	overflow: hidden;
	/* box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.2); */ 
}

nav a {
	display: inline-block;
	letter-spacing: 0px;
/* 	padding: 3px 0; */
	width: 123px;
	background: #0099FF;
	margin-left: -5px;
	margin-right: -5px;
	text-align: center;
	/* box-shadow: inset 0 1px 0px rgba(255, 255, 255, 0.9), inset 0 2px 0px
		rgba(0, 0, 0, 0.01); */
	color: #fff;
	text-decoration: none;
	-webkit-clip-path: polygon(10px 50%, 0 0, 112px 0, 99% 50%, 112px 99%, 0 99%);
	clip-path: polygon(10px 50%, 0 0, 112px 0, 99% 50%, 112px 99%, 0 99%);
	/* background-image: -webkit-gradient(linear, center 0%, center 100%, from(rgba(255, 255, 255
		, 0.6)), to(#00FFFF)); */
	-webkit-transition: background-color 0.4s ease 0s;
/* 	text-shadow: 0 1px 0px rgba(255, 255, 255, 0.8); */
	/* font-size: 0.9em; */
}

nav a:first-child {
	margin-left: 0px;
	-webkit-clip-path: polygon(0 0, 112px 0, 99% 50%, 112px 99%, 0 99%);
	clip-path: polygon(0 0, 112px 0, 99% 50%, 112px 99%, 0 99%);
	text-decoration: none;
}

nav a:last-child {
	margin-right: 0px;
	-webkit-clip-path: polygon(10px 50%, 0 0, 100% 0, 100% 99%, 0 99%);
	clip-path: polygon(10px 50%, 0 0, 100% 0, 100% 99%, 0 99%);
	text-decoration: none;
	background: #252525;
}

nav a:hover {
	/* background: #ccc;
	box-shadow: inset 0 0px 6px rgba(0, 0, 0, 0.2);*/
 	text-decoration: none;
 	color: #fff;
}

nav a:active {
	/* background: #ccc;
	box-shadow: inset 0 0px 8px rgba(0, 0, 0, 0.5); */
	text-decoration: none;
}
nav a:focus{
	font: webkit-body;
	text-decoration: none;
	color: #fff;
}
nav a{
	font:inherit;
	text-decoration: none; 
}